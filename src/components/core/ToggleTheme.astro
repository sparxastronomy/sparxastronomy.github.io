---
import { Icon } from 'astro-icon/components'
const {
	label = 'Toggle between Dark and Light mode',
	class:
		className = 'text-yellow-500 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-full text-sm p-2.5 inline-flex items-center transition-opacity duration-300 ease-in-out border-4 border-transparent hover:border-yellow-400 dark:hover:border-gray-300',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:bulb',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-theme>
	<Icon name={iconName} class={iconClass} />
</button>

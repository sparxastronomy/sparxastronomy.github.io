<style>
	.home-graphic{
		@apply bg-no-repeat bg-center bg-cover h-[100vh] -translate-y-[10vh];
		@apply bg-[url('/src/assets/LightBg.webp')];
		@apply dark:bg-[url('/src/assets/DarkBg.webp')]
	}

	/* Animate the intro text class on pageload from bottom up */
	.intro-text {
		animation: intro-text 1s ease-in-out;
	}
	@keyframes intro-text {
		0% {
			transform: translateY(100vh);
		}
		100% {
			transform: translateY(0%);
		}
	}

	/* Scroll down animation */
	.scroll-down-dude:before,
	.scroll-down-dude:after {
		content: '';
		display: block;
		width: 25px;
		height: 25px;
		transform: rotate(45deg);
		border-bottom: 5px solid;
		border-right:  5px solid;
		/* make the border rounded */
		@apply rounded-sm;
		@apply border-red-400;
	}

	.scroll-down-dude:before {
		animation: down-arrow-before 2.5s ease-in-out infinite;
	}

	.scroll-down-dude:after {
		animation: down-arrow-after 2.5s ease-in-out infinite;
	}

	@keyframes down-arrow-before {
		50% {
			transform: rotate(45deg) translate(70%, 70%);
		}
		100% {
			transform: rotate(45deg) translate(70%, 70%);
		}
	}

	@keyframes down-arrow-after {
		50% {
			transform: rotate(45deg) translate(110%, 110%);
			opacity: 0;
		}
		51% {
			transform: rotate(45deg) translate(-130%, -130%);
		}
		100% {
			transform: rotate(45deg) translate(-70%, -70%);
			opacity: 1;
		}
	}

</style>


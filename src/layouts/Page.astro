---
import Header from '../components/widgets/Header.astro';
import Footer from '../components/widgets/Footer.astro';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';


export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
	<Header />
	<!-- Padding to avoid the header -->
	<div class="bg-white dark:bg-slate-800 pt-[80px] md:pt-[calc(12vh-5px)]">
	</div>
	<!-- Slot for contents -->
	<div id="page" class="dark:bg-dark-b text-slate-800 dark:text-slate-200 flex flex-col justify-center items-center">
		<slot />
	</div>
	<Footer />
</Layout>

---
import Header from '../components/widgets/Header.astro';
import Footer from '../components/widgets/Footer.astro';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';


export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
	<Header />
	<!-- Padding to avoid the header -->
	<div class="noise-container bg-white dark:bg-astro-gray-700 pt-[65px] md:pt-[calc(12vh-5px)]">
		<div class="noise"></div>
		<hr class="border-astro-gray-500">
	</div>
	
	<!-- Slot for contents -->
	<div id="page" class="noise-container bg-white dark:bg-astro-gray-700 text-slate-800 dark:text-slate-200 flex flex-col justify-center items-center">
		<div class="noise"></div>
		<slot />
	</div>
	<div class="noise-container">
		<div class="noise"></div>
		<Footer />
	</div>
</Layout>
